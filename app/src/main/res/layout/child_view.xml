<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="55dip"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewPlay"
        android:src="@drawable/ic_ic_action_play"
        android:onClick="makeToast"
        android:minHeight="30dp"
        android:minWidth="30dp" />

    <TextView
        android:id="@+id/lblListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17dip"
        android:layout_alignParentTop="false"
        android:minWidth="100dp"
        android:padding="5dp"
        android:layout_toRightOf="@+id/imageViewPlay"
        android:layout_toLeftOf="@+id/imageViewEdit"
        android:layout_toStartOf="@+id/imageViewEdit"
        android:gravity="center" />



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewDelete"
        android:minWidth="30dp"
        android:minHeight="30dp"
        android:src="@drawable/ic_action_discard"
        android:onClick="makeToast"
        android:layout_alignParentTop="false"
        android:layout_alignParentRight="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewEdit"
        android:src="@drawable/ic_action_edit"
        android:onClick="makeToast"
        android:minWidth="30dp"
        android:minHeight="30dp"
        android:layout_toStartOf="@id/imageViewDelete"/>

</RelativeLayout>